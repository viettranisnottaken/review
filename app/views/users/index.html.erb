<p id="notice"><%= notice %></p>

<h1>Members of our cult</h1>

<table class = "table">
  <thead>
    <tr>
      <th colspan="2">Name</th>
      <th colspan="2">Email</th>
      <th colspan="6">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td colspan="2"><%= user.name %></td>
      <td colspan="2"><%= user.email %></td>
      <td colspan="2"><%= link_to "Show ", user %></td>
      <td colspan="2"><%= link_to "Edit ", edit_user_path(user) %></td>
      <td colspan="2"><%= link_to "Destroy ", user, method: :delete, data: {confirm: "U sure?"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>
