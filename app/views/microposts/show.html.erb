<h1>Post</h1>

<div class="panel panel-default", style="padding: 15px 40px">
  <h3><%= @micropost.user.name %></h3>
  <p><%= @micropost.content %></p>
  <p><small><%= link_to "All posts", microposts_path %></small></p>
</div>

<h3>Comments</h3>

<div class="">
  <%= form_for(@micropost.comments.build) do |f| %>
    <%= f.label :content %>
    <%= f.text_field :content, class: "form-control" %>
    <%= f.submit "Update comment", class: "btn btn-primary" %>
  <% end %>
</div>

<div class="">
  index comment
</div>
